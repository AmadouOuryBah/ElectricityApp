@using Electricity.BusinessLogic.DTO_s
@model Electricity.BusinessLogic.Requests.ElectricityConsumptionRequest

<h2 class="mt-3">Create new counter</h2>



<form class="row g-3 my-4" method="post" asp-controller="ElectricityConsumption">
    <div class="row">
        <div class="mb-3 col-4">
            <label asp-for="Year" class="form-label">Year</label>
            <input asp-for="Year" type="text" class="form-control">
        </div>

        <div class="mb-3 col-4">
            <label asp-for="Month" class="form-label">Month</label>
            <input asp-for="Month" type="text" class="form-control">
        </div>
    </div>


    <div class="row">
        <div class="mb-3 col-4">
            <label asp-for="Ressource" class="form-label">Counter type</label>
            <select asp-for="Ressource" class="form-select">
        
                <option >
                     ElectroEnergya
                </option>
                <option>
                    heatMeter (Kcal)
                </option>
                <option>
                    KumboMeter (cube meter)
                </option>

                
            </select>
        </div>

        <div class="mb-3 col-4">
            <label asp-for="BuildingId" class="form-label"> Building </label>
            <select asp-for="BuildingId" class="form-select">

              
                <option>
                    Building
                </option>
      
            </select>
        </div>

       
    </div>

    <div class="col-4">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <select class="form-select">
        </select>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>
