@using System.Security.Claims;
@model IEnumerable<Electricity.BusinessLogic.DTO_s.ElectricalEquipementDto>

<div class="row mt-3">
    <div class="col-lg-6">
        <h2>Electrical Equipement</h2>
    </div>
</div>
@{
    if (User.HasClaim(ClaimsIdentity.DefaultRoleClaimType, "admin"))
    {
        <div class="my-2">
            <a class="btn btn-primary" asp-action="Create" asp-controller="ElectricalEquipement">
                <i class="bi bi-plus-circle pl-1" ></i>&nbsp; create</a>
        </div>
    }
}

<table class="table my-4">

    <thead class="table-dark">

        <tr>
            <th scope="col">Name</th>
            <th scope="col">Power</th>
            <th scope="col">Coefficient</th>
            @{
                if(User.HasClaim(ClaimsIdentity.DefaultRoleClaimType, "admin"))
                {
                    <th scope="col">Action</th>
                }
            }
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Power</td>
                <td>@item.Coefficient</td>
                @{
                    if (User.HasClaim(ClaimsIdentity.DefaultRoleClaimType, "admin"))
                    {
                        <td>
                            <a class="btn btn-secondary" href="ElectricalEquipement/Edit/@item.Id"><i class="bi bi-pencil-square mx-2"></i>edit</a>
                            <a class="btn btn-danger mx-2" href="ElectricalEquipement/Delete/@item.Id"><i class="bi bi-trash3-fill mx-2"></i>delete</a>
                        </td>
                    }
                }
              
            </tr>

        }
    </tbody>
   
</table> 