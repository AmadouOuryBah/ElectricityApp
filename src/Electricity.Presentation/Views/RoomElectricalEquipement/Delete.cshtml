@model Electricity.BusinessLogic.DTO_s.RoomElectricalEquipementDto

<h2 class="mt-3">Are You Sure you want to Delete ?</h2>



<form class="row g-3 my-4" method="post" asp-controller="RoomElectricalEquipement">
   

    <div class="row">
        <div class="col-6 mb-3">
            <label asp-for="RoomId" class="form-label"> Room</label>
            <select asp-for="RoomId" disabled class="form-select">
                <option>
                    @Model.Room.Name
                   
                </option>
          
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="ElectricalEquipementId" class="form-label"> Device </label>
            <select disabled asp-for="ElectricalEquipementId" class="form-select">
                <option>
                    @Model.ElectricalEquipement.Name 
                   
                </option>
            </select>
        </div>

    </div>


    <div class="row">
        <div class="col-6">
            <label asp-for="Quantity" class="form-label"> Quantity</label>
            <input asp-for="Quantity" disabled type="text" value=@Model.Quantity class="form-control">
        </div>
    </div>
    
        <button type="submit" class="btn btn-primary"> Delete </button>
    
</form>
