@using Electricity.BusinessLogic.DTO_s;
@using Electricity.BusinessLogic.Requests
@model Electricity.BusinessLogic.DTO_s.RoomElectricalEquipementDto


<h2 class="mt-3">Edit Room </h2>



<form class="row g-3 my-4" method="post" asp-controller="RoomElectricalEquipement">
    
    <div class="row">
        <div class="col-6 mb-3">
            <label asp-for="RoomId" class="form-label"> Room, Floor and building</label>
            <select asp-for="RoomId" class="form-select">
                <option>
                    @Model.Room.Name 
                    @Model.Room.Floor
                </option>
                @foreach (var item in (List<RoomDto>)ViewData["rooms"])
                {
                    <option value=@item.Id>
                        <span>@item.Name</span>
                        <span>@item.Floor</span>
                        <span>@item.Building.Name</span>
                        <span>@item.Building.City</span>
                    </option>

                }
            </select>
        </div>
    </div>
   
    <div class="row">
        <div class="col-6">
            <label asp-for="ElectricalEquipementId" class="form-label"> Device and Power</label>
            <select asp-for="ElectricalEquipementId" class="form-select">
                <option>
                    @Model.ElectricalEquipement.Name ,
                    @Model.ElectricalEquipement.Power :


                </option>

                @foreach (var item in (List<ElectricalEquipementDto>)ViewData["equipements"])
                {
                    <option value=@item.Id>
                        @item.Name
                        <span>Power:</span> @item.Power
                    </option>
                            

                }
            </select>
        </div>

    </div>

   
    <div class="row">
        <div class="col-6">
            <label asp-for="WorkingTime" class="form-label"> Working time</label>
            <input asp-for="WorkingTime" type="text" value=@Model.WorkingTime class="form-control">
        </div>
    </div>

   
    <div>
        <button type="submit" class="btn btn-primary"> Save </button>
    </div>
</form>
