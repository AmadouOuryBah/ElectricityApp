@model IEnumerable<Electricity.BusinessLogic.DTO_s.RenterDto>

<div class="row mt-2">
    <div class="col-lg-6">
        <h2>List of Renters</h2>
    </div>


</div>
 
<div class="my-2">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Renter">create</a>
</div>
<table class="table my-4">

    <thead class="table-dark">

        <tr>
            <th scope="col">Name</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-secondary" href="Renter/Edit/@item.Id">edit</a>
                    <a class="btn btn-danger mx-2" href="Renter/Delete/@item.Id"><i class="bi bi-trash3-fill"></i>delete</a>
                </td>
            </tr>

        }
    </tbody>
   
</table>