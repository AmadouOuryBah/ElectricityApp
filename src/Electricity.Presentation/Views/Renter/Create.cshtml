@model Electricity.BusinessLogic.Requests.RenterRequest

<h2 class=" mt-3">Create new Renter</h2>

<form class="row g-3 my-4" method="post" asp-controller="Renter">
    <div class="row">
        <div class="mb-3 col-4">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control">
        </div>
    </div>
 
    <div>
        <button class="btn btn-primary" type="submit">Add</button>
        <a class="btn btn-secondary" asp-controller="Renter" asp-action="Index">Back </a>
    </div>
</form>
