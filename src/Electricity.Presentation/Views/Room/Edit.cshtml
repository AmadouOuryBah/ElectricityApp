@using Electricity.BusinessLogic.DTO_s;
@using Electricity.BusinessLogic.Requests
@model Electricity.BusinessLogic.DTO_s.RoomDto


<h2 class="mt-3">Edit Room </h2>



<form class="row g-3 my-4" method="post" asp-controller="Room">

    <div class="row">

        <div class="mb-3 col-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
        </div>


        <div class="mb-3 col-6">
            <label asp-for="RoomArea" class="form-label">Area</label>
            <input asp-for="RoomArea" type="text" class="form-control" value="@Model.RoomArea">
        </div>
    </div>
    
    <div  class="row">

        <div class="col-6">
            <select asp-for="BuildingId" class="form-select">
                <label class="form-label">Building<</label>
                <option>@Model.Building.Name </option>
                @foreach (var item in (List<BuildingDto>)ViewData["buildings"])
                {
                    <option value=@item.Id>
                        <span>@item.Name</span>
                        <span>@item.City</span>
                    </option>

                }
            </select>
        </div>

        <div class="col-6">
            <select asp-for="RenterId" class="form-select">
                <label class="form-label">Renters<</label>
                <option>@Model.Renter.Name</option>
                @foreach (var item in (List<RenterDto>)ViewData["renters"])
                {
                    <option value=@item.Id>@item.Name </option>

                }
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <select asp-for="ScheduleId" class="form-select">
                <label class="form-label">Schedule<</label>
                <option>@Model.Schedule.Name</option>
                @foreach (var item in (List<ScheduleDto>)ViewData["schedules"])
                {
                    <option value=@item.Id>@item.Name </option>

                }

            </select>
        </div>


        <div class="col-6">
            <label asp-for="TotalWorkers" class="form-label">Workers</label>
            <input asp-for="TotalWorkers" type="text" value=@Model.TotalWorkers class="form-control">
        </div>
    </div>
   
   

    <div class="row">

        <div class="col-6">
            <label asp-for="ArrivalDate" class="form-label">Arrival Date</label>
            <input asp-for="ArrivalDate" type="text" value=@Model.ArrivalDate class="form-control">
        </div>

        <div class="col-6">
            <label asp-for="LeavingDate" class="form-label">Leaving Date</label>
            <input asp-for="LeavingDate" type="text" value=@Model.LeavingDate class="form-control">
        </div>
    </div>
     
    <div>
        <button type="submit" class="btn btn-primary"> Save </button>
    </div>
</form>
