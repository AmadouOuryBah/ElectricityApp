@model IEnumerable<Electricity.BusinessLogic.DTO_s.ScheduleDto>

<h2 class="mt-3">Schedule </h2>

<table class="table my-4">

    <thead class="table-dark">

        <tr>
            <th scope="col"> Name</th>
            <th scope="col">Sun</th>
            <th scope="col">Mon</th>
            <th scope="col">Tue</th>
            <th scope="col">Wed</th>
            <th scope="col">Thur</th>
            <th scope="col">Fri</th>
            <th scope="col">Sat</th>
              <th scope="col">Total Hours</th>

            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>

               
                <td>
                    <a class="btn btn-secondary" href="Schedule/Edit/@item.Id"><i class="bi bi-pencil-square mx-2"></i>edit</a>
                    <a class="btn btn-danger mx-2" href="Schedule/Delete/@item.Id"><i class="bi bi-trash3-fill mx-2"></i>delete</a>
                </td>
            </tr>

        }
    </tbody>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Schedule">create</a>
</table>