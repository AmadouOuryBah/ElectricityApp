@using Electricity.BusinessLogic.DTO_s
@model Electricity.BusinessLogic.Requests.ScheduleRequest

<h2 class="mt-3">New Schedule</h2>

<form class="row g-3 my-4" method="post" asp-controller="Schedule">

    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="Text" class="form-control">
    </div>
    
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Sun</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Mon</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Tue</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Wed</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Thur</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Fri</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    <div class="mb-2 col-4">
        <label asp-for="Name" class="form-label">Sat</label>
        <input asp-for="Name" type="CheckBox" class="form-control">
    </div>
    
    

    <div>
        <button class="btn btn-primary" type="submit">Add</button>
    </div>
</form>
